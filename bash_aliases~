# TODOD: For each alias, make a function. If argument --normal is passed, use the normal version of the function
#   normal grep would be grep without color, for example

# fix this later with brew
alias dircolors='gdircolors'

# grep alias - use gnu grep + color
alias grep='ggrep --color'

# ls with color - pulls from gnuCoreUtils dircolors
#alias ls='gls --color'
alias ls='ind gls --color -Alh' # The only way I could get this to work. If ls was already an alias, it would lose color with ind

# Treewith inditation and color
alias tree="ind tree -C"


# Cat with color
alias cat="src-hilite-lesspipe.sh"

# Less with color
alias less="less -R"

# More with color
alias more="more -R"


# NeoVIm
alias vi="nvim"
alias vim="nvim"
alias emacs="nvim" # lol


# Common misspellings and mistypings
alias sl="ls"


# git
alias ga="git add"
alias gc="git commit"
alias gpl="git pull"
alias gps="git push"
alias gf="git fetch"
alias gb="git branch"
alias gm="git merge"



# Force mkdir to make intermediate directories
alias mkdir="mkdir -pv"



# cd with ease
alias ..="cd .."
alias ..2="cd ../.."
alias ..3="cd ../../.."
alias ..4="cd ../../../.."
alias ..5="cd ../../../../.."

alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias .....="cd ../../../.."
alias ......="cd ../../../../.."









# Add a bunch of color alias ## This is nice, but where did I find this??
source "`brew --prefix`/etc/grc.bashrc"


# easy access to Anaconda python
alias myAnacondaDont="/Users/adamgaia/anaconda3/bin/python"
